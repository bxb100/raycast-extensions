{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "remember-the-date",
  "title": "Remember the Date",
  "description": "Creates and shows the most important date which should be remembered.",
  "icon": "icon.png",
  "author": "pernielsentikaer",
  "contributors": [
    "samuelkraft",
    "ridemountainpig",
    "aryan_thatte",
    "0xdhrv",
    "atsushi_kawamura"
  ],
  "license": "MIT",
  "type": "module",
  "keywords": [
    "date",
    "remember",
    "countdown",
    "important"
  ],
  "commands": [
    {
      "name": "index",
      "title": "Create Date",
      "subtitle": "Remember the Date",
      "description": "Create new date to remember",
      "mode": "view",
      "icon": "add.png"
    },
    {
      "name": "list",
      "title": "Days List",
      "subtitle": "Remember the Date",
      "description": "List of all dates to remember",
      "mode": "view"
    },
    {
      "name": "menu-bar",
      "title": "Menu Bar Days List",
      "description": "List of all dates to remember in the menu bar",
      "mode": "menu-bar",
      "interval": "1d"
    },
    {
      "name": "up-next",
      "title": "Up Next",
      "description": "Show the next date to remember",
      "mode": "no-view",
      "interval": "1d"
    }
  ],
  "tools": [
    {
      "name": "add-date",
      "title": "Add Date",
      "description": "Add a new date to remember",
      "path": "src/tools/add-date.ts"
    },
    {
      "name": "list-dates",
      "title": "List Dates",
      "description": "List all remembered dates",
      "path": "src/tools/list-dates.ts"
    },
    {
      "name": "delete-date",
      "title": "Delete Date",
      "description": "Delete a remembered date",
      "path": "src/tools/delete-date.ts"
    },
    {
      "name": "edit-date",
      "title": "Edit Date",
      "description": "Edit a remembered date",
      "path": "src/tools/edit-date.ts"
    }
  ],
  "preferences": [
    {
      "name": "showDate",
      "type": "checkbox",
      "required": false,
      "default": false,
      "title": "Show the date",
      "description": "Should the date be visible in the list",
      "label": "Yes, show date in the list"
    },
    {
      "name": "showCountdownByDay",
      "type": "checkbox",
      "required": false,
      "default": false,
      "title": "Countdown unit",
      "description": "Show the countdown in days.",
      "label": "Show the countdown in days"
    }
  ],
  "categories": [
    "Productivity"
  ],
  "ai": {
    "evals": [
      {
        "input": "@remember-the-date add my birthday on December 25th 2024",
        "mocks": {
          "add-date": {
            "success": true,
            "message": "Successfully added \"my birthday\" to your remembered dates.",
            "item": {
              "id": "test-id-123",
              "name": "my birthday",
              "subtitle": "",
              "date": "2024-12-25",
              "icon": "calendar",
              "color": "blue"
            }
          }
        },
        "expected": [
          {
            "callsTool": "add-date"
          }
        ]
      },
      {
        "input": "@remember-the-date remember a week ago as my cat's 2nd birthday",
        "mocks": {
          "add-date": {
            "success": true,
            "message": "Successfully added \"Cat's 2nd birthday\" to your remembered dates.",
            "item": {
              "id": "test-id-456",
              "name": "Cat's 2nd birthday",
              "subtitle": "",
              "date": "2025-11-18",
              "icon": "calendar",
              "color": "blue"
            }
          }
        },
        "expected": [
          {
            "callsTool": "add-date",
            "input": {
              "name": "Cat's 2nd birthday",
              "subtitle": "",
              "date": "2025-11-18"
            }
          }
        ]
      },
      {
        "input": "@remember-the-date add yesterday as the day I finished my project",
        "mocks": {
          "add-date": {
            "success": true,
            "message": "Successfully added \"The day I finished my project\" to your remembered dates.",
            "item": {
              "id": "test-id-123",
              "name": "The day I finished my project",
              "subtitle": "",
              "date": "2025-11-24",
              "icon": "calendar",
              "color": "blue"
            }
          }
        },
        "expected": [
          {
            "callsTool": "add-date",
            "input": {
              "name": "The day I finished my project",
              "subtitle": "",
              "date": "2025-11-24"
            }
          }
        ]
      },
      {
        "input": "@remember-the-date remember 3 days ago as my doctor appointment",
        "mocks": {
          "add-date": {
            "success": true,
            "message": "Successfully added \"Doctor appointment\" to your remembered dates.",
            "item": {
              "id": "test-id-789",
              "name": "Doctor appointment",
              "subtitle": "",
              "date": "2025-11-22",
              "icon": "calendar",
              "color": "blue"
            }
          }
        },
        "expected": [
          {
            "callsTool": "add-date",
            "input": {
              "name": "Doctor appointment",
              "subtitle": "",
              "date": "2025-11-22"
            }
          }
        ]
      },
      {
        "input": "@remember-the-date add wedding anniversary as the day we got married in Hawaii",
        "mocks": {
          "add-date": {
            "success": true,
            "message": "Successfully added \"Wedding anniversary\" to your remembered dates.",
            "item": {
              "id": "test-id-789",
              "name": "Wedding anniversary",
              "subtitle": "The day we got married in Hawaii",
              "date": "2024-06-15",
              "icon": "calendar",
              "color": "blue"
            }
          }
        },
        "expected": [
          {
            "callsTool": "add-date",
            "input": {
              "name": "Wedding anniversary",
              "subtitle": "The day we got married in Hawaii",
              "date": "2024-06-15"
            }
          }
        ]
      },
      {
        "input": "@remember-the-date add last Friday as my job interview",
        "mocks": {
          "add-date": {
            "success": true,
            "message": "Successfully added \"Job interview\" to your remembered dates.",
            "item": {
              "id": "test-id-999",
              "name": "Job interview",
              "subtitle": "",
              "date": "2025-11-21",
              "icon": "calendar",
              "color": "blue"
            }
          }
        },
        "expected": [
          {
            "callsTool": "add-date",
            "input": {
              "name": "Job interview",
              "subtitle": "",
              "date": "2025-11-21"
            }
          }
        ]
      },
      {
        "input": "@remember-the-date show me all my dates",
        "mocks": {
          "list-dates": {
            "success": true,
            "count": 2,
            "items": [
              {
                "id": "test-id-1",
                "name": "Anniversary",
                "subtitle": "Wedding anniversary",
                "date": "2024-06-15"
              },
              {
                "id": "test-id-2",
                "name": "Birthday",
                "subtitle": "Mom's birthday",
                "date": "2024-08-22"
              }
            ]
          }
        },
        "expected": [
          {
            "callsTool": "list-dates"
          }
        ]
      },
      {
        "input": "@remember-the-date find dates with birthday",
        "mocks": {
          "list-dates": {
            "success": true,
            "count": 1,
            "items": [
              {
                "id": "test-id-2",
                "name": "Birthday",
                "subtitle": "Mom's birthday",
                "date": "2024-08-22"
              }
            ]
          }
        },
        "expected": [
          {
            "callsTool": "list-dates"
          }
        ]
      },
      {
        "input": "@remember-the-date edit the anniversary date to June 16th 2024",
        "mocks": {
          "list-dates": {
            "success": true,
            "count": 1,
            "items": [
              {
                "id": "test-id-1",
                "name": "Anniversary",
                "subtitle": "Wedding anniversary",
                "date": "2024-06-15"
              }
            ]
          },
          "edit-date": {
            "success": true,
            "message": "Successfully updated \"Anniversary\".",
            "originalItem": {
              "id": "test-id-1",
              "name": "Anniversary",
              "subtitle": "Wedding anniversary",
              "date": "2024-06-15"
            },
            "updatedItem": {
              "id": "test-id-1",
              "name": "Anniversary",
              "subtitle": "Wedding anniversary",
              "date": "2024-06-16"
            }
          }
        },
        "expected": [
          {
            "callsTool": "list-dates"
          },
          {
            "callsTool": "edit-date"
          }
        ]
      },
      {
        "input": "@remember-the-date delete the birthday date",
        "mocks": {
          "list-dates": {
            "success": true,
            "count": 1,
            "items": [
              {
                "id": "test-id-2",
                "name": "Birthday",
                "subtitle": "Mom's birthday",
                "date": "2024-08-22"
              }
            ]
          },
          "delete-date": {
            "success": true,
            "message": "Successfully deleted \"Birthday\" from your remembered dates.",
            "deletedItem": {
              "id": "test-id-2",
              "name": "Birthday",
              "subtitle": "Mom's birthday",
              "date": "2024-08-22"
            }
          }
        },
        "expected": [
          {
            "callsTool": "list-dates"
          },
          {
            "callsTool": "delete-date"
          }
        ]
      },
      {
        "input": "@remember-the-date add my birthday on March 15th as a yearly recurring date",
        "mocks": {
          "add-date": {
            "success": true,
            "message": "Added \"my birthday\" on 2024-03-15",
            "item": {
              "id": "test-id-recurring-1",
              "name": "my birthday",
              "subtitle": "",
              "date": "2024-03-15",
              "icon": "calendar",
              "color": "blue",
              "repeat": "yearly"
            }
          }
        },
        "expected": [
          {
            "callsTool": "add-date",
            "input": {
              "name": "my birthday",
              "date": "2024-03-15",
              "repeat": "yearly"
            }
          }
        ]
      },
      {
        "input": "@remember-the-date add team standup every week on Monday",
        "mocks": {
          "add-date": {
            "success": true,
            "message": "Added \"team standup\" on 2024-12-02",
            "item": {
              "id": "test-id-recurring-2",
              "name": "team standup",
              "subtitle": "",
              "date": "2024-12-02",
              "icon": "calendar",
              "color": "blue",
              "repeat": "weekly"
            }
          }
        },
        "expected": [
          {
            "callsTool": "add-date",
            "input": {
              "repeat": "weekly"
            }
          }
        ]
      },
      {
        "input": "@remember-the-date add rent payment on the 1st of every month",
        "mocks": {
          "add-date": {
            "success": true,
            "message": "Added \"rent payment\" on 2024-12-01",
            "item": {
              "id": "test-id-recurring-3",
              "name": "rent payment",
              "subtitle": "",
              "date": "2024-12-01",
              "icon": "calendar",
              "color": "blue",
              "repeat": "monthly"
            }
          }
        },
        "expected": [
          {
            "callsTool": "add-date",
            "input": {
              "repeat": "monthly"
            }
          }
        ]
      }
    ]
  },
  "dependencies": {
    "@raycast/api": "^1.103.7",
    "@raycast/utils": "^2.2.2",
    "moment": "^2.30.1",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish",
    "test": "vitest run"
  },
  "platforms": [
    "macOS",
    "Windows"
  ]
}

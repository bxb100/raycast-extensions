{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bunq",
  "title": "Bunq",
  "description": "Banking client for bunq - manage accounts, cards, and payments",
  "icon": "extension-icon.png",
  "author": "TurboCoder13",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Finance"
  ],
  "keywords": [
    "raycast",
    "bunq",
    "banking",
    "finance",
    "payments",
    "iban",
    "money",
    "transfers",
    "netherlands"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "apiKey",
      "title": "API Key",
      "description": "Your bunq API key. Get one from the bunq app under Profile > Security & Settings > Developers > API Keys.",
      "type": "password",
      "required": true,
      "placeholder": "Enter your bunq API key"
    },
    {
      "name": "environment",
      "title": "Environment",
      "description": "Choose between production and sandbox environment",
      "type": "dropdown",
      "required": true,
      "default": "production",
      "data": [
        {
          "title": "Production",
          "value": "production"
        },
        {
          "title": "Sandbox",
          "value": "sandbox"
        }
      ]
    },
    {
      "name": "locale",
      "title": "Locale",
      "description": "Locale for formatting dates and currency amounts",
      "type": "dropdown",
      "required": false,
      "default": "nl-NL",
      "data": [
        {
          "title": "Dutch (Netherlands)",
          "value": "nl-NL"
        },
        {
          "title": "English (US)",
          "value": "en-US"
        },
        {
          "title": "English (UK)",
          "value": "en-GB"
        },
        {
          "title": "German (Germany)",
          "value": "de-DE"
        },
        {
          "title": "French (France)",
          "value": "fr-FR"
        },
        {
          "title": "Spanish (Spain)",
          "value": "es-ES"
        },
        {
          "title": "Italian (Italy)",
          "value": "it-IT"
        },
        {
          "title": "Portuguese (Portugal)",
          "value": "pt-PT"
        }
      ]
    }
  ],
  "commands": [
    {
      "name": "bunq",
      "title": "Bunq",
      "description": "Manage your bunq accounts, cards, and payments",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.104.1",
    "@raycast/utils": "^1.17.0",
    "node-forge": "^1.3.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "22.13.10",
    "@types/node-forge": "^1.3.11",
    "@types/react": "19.0.10",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.22.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vitest": "^4.0.17"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test:coverage",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  },
  "engines": {
    "node": ">=18.17.0 <23"
  }
}

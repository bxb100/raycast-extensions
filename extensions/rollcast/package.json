{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "rollcast",
  "title": "Rollcast",
  "description": "Roll dice for your D&D games from Raycast!",
  "icon": "command-icon.png",
  "author": "troalexis",
  "contributors": [
    "pernielsentikaer",
    "alexi.build"
  ],
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Dice Roll",
      "description": "Roll different dice variations",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.104.6"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "preferences": [
    {
      "name": "copy_to_clipboard",
      "description": "Copy the dice result to clipboard when rolling",
      "type": "checkbox",
      "required": true,
      "title": "Options",
      "label": "Copy dice result to clipboard when rolling"
    }
  ]
}
